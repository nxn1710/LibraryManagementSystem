
@model LibraryManagement.Models.Author
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Add author form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Add", "Authors", FormMethod.Post)) {
                            @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(a => a.AuthorName, "Author Name")
                            @Html.TextBoxFor(a => a.AuthorName, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.AuthorName, null, new {  @class = "text-danger" })
                        </div>
                            <button type="submit" class="btn btn-primary">Add Button</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>