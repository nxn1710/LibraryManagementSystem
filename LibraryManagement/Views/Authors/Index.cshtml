</div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All Authors in library
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover"
                           id="dataTables-example">
                        <thead>
                            <tr class="center">
                                <th>Author ID</th>
                                <th>Author Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model) {
                                <tr>

                                    <td>@author.id</td>
                                    <td> @author.author_name</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Authors", new {@author.id})" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> </a>
                                        <a href="@Url.Action("Delete", "Authors", new {@author.id})" onclick="deleteFunction(event, @author.id)" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
