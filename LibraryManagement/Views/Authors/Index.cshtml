@model PagedList.IPagedList<LibraryManagement.Models.Author>
@using PagedList.Mvc;
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Authors/View All</h1>
    </div>
</div>
<div class="row">
    @if (ViewBag.message != null) {
        <p class="alert alert-success text-center">
            @ViewBag.message
        </p>
    }
    <div class="col-sm-9 mb-1">
        @using (Html.BeginForm("Index", "Authors", FormMethod.Get)) {
            <div class="col-sm-5">
                @Html.TextBox("SearchString", null, new { @class = "form-control input-sm" })
            </div>
            <div class="col-sm-3">
                <input class="btn btn-primary" type="submit" value="Search" />
            </div>
        }
    </div>
    <div class="col-sm-3 mb-1">
        <a href="@Url.Action("Add", "Authors")" class="btn btn-success">
            <i class="fa fa-plus"></i>
            Add New
        </a>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All Authors in library
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover"
                           id="dataTables-example">
                        <thead>
                            <tr class="center">
                                <th>Author ID</th>
                                <th>Author Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model) {
                                <tr>

                                    <td>@author.id</td>
                                    <td> @author.author_name</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Authors", new {authorId = @author.id})" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> </a>
                                        <a href="@Url.Action("Delete", "Authors", new {authorId = @author.id})" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="text-align: center;">

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, searchString = ViewBag.searchValue }))

</div>