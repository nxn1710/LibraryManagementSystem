@model LibraryManagement.Models.Member
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Update Member ID @Model.id
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "Member", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.HiddenFor(a => a.id)
                                @Html.LabelFor(a => a.fullname, "Author Name")
                                @Html.TextBoxFor(a => a.fullname, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.fullname, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.HiddenFor(a => a.id)
                                @Html.LabelFor(a => a.phonenumber, "Phone Number")
                                @Html.TextBoxFor(a => a.phonenumber, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.phonenumber, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.HiddenFor(a => a.id)
                                @Html.LabelFor(a => a.address, "Address")
                                @Html.TextBoxFor(a => a.address, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.address, null, new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-info">Update</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>