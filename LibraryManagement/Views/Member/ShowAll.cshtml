
@{
    ViewBag.Title = "ShowAll";
}
@model IEnumerable<LibraryManagement.Models.Member>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tables</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-9">
        <div class="dataTables_filter">
            @using (Html.BeginForm("ShowAll", "Member", FormMethod.Get))
            {
            <label>
                Search:
                @Html.TextBox("fullname", "",new { @class = "form-control input-sm"})
            </label>
                <button type=submit class="btn btn-primary"><i class="fa fa-search"></i></button>
            }
            </div>
    </div>
    <div class="col-sm-3">
        <br>
        <a href="/Member/Store" class="btn btn-success"><i class="fa fa-plus"></i>Add Member</a>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All Members in library
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover"
                           id="dataTables-example">
                        <thead>
                            <tr class="center">
                                <th>Members ID</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5" style="color:red">
                                        No match any document!!
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var listMembers in Model)
                                {
                                    <tr>
                                        <td>@listMembers.id</td>
                                        <td>@listMembers.fullname</td>
                                        <td>@listMembers.phonenumber</td>
                                        <td>@listMembers.address</td>
                                        <td>
                                            <a href="@Url.Action("Edit","Member",new {id=listMembers.id})" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> </a>
                                            <a href="@Url.Action("Delete","Member",new {id=listMembers.id})" class="btn btn-danger"><i class="fa fa-trash"></i>                                                    </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <div class="dataTables_info"
             id="dataTables-example_info"
             role="status"
             aria-live="polite">
            Showing 1 to 10 of 57 entries
        </div>
    </div>
    <div class="col-sm-7">
        <div class="dataTables_paginate paging_simple_numbers">
            <ul class="pagination">
                <li class="paginate_button previous disabled">
                    <a href="#" data-dt-idx="0" tabindex="0">Previous</a>
                </li>
                <li class="paginate_button active">
                    <a href="#" data-dt-idx="1" tabindex="0">1</a>
                </li>
                <li class="paginate_button">
                    <a href="#" data-dt-idx="2" tabindex="0">2</a>
                </li>
                <li class="paginate_button">
                    <a href="#" data-dt-idx="3" tabindex="0">3</a>
                </li>
                <li class="paginate_button">
                    <a href="#" data-dt-idx="4" tabindex="0">4</a>
                </li>
                <li class="paginate_button">
                    <a href="#" data-dt-idx="5" tabindex="0">5</a>
                </li>
                <li class="paginate_button">
                    <a href="#" data-dt-idx="6" tabindex="0">6</a>
                </li>
                <li class="paginate_button next">
                    <a href="#" data-dt-idx="7" tabindex="0">Next</a>
                </li>
            </ul>
        </div>
    </div>
</div>

