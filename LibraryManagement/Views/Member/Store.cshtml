
@{
    ViewBag.Title = "Show";
}
@model LibraryManagement.Models.Member


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Mangement members</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add members
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Store", "Member", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(m => m.fullname, new {@class = "form-control", @placeholder = "Full name" })
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(m => m.phonenumber, new { @class = "form-control", @placeholder = "(0000).000.000" })
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                @Html.TextBoxFor(m => m.address, new { @class = "form-control", @placeholder = "Address" })
                            </div>
                            <button type="submit" class="btn btn-default">Add Member</button>
                            <div class="form-group">
                                @if (ViewBag.message != "")
                                {
                                    <span class="badge badge-danger">@ViewBag.message</span>
                                }
                            </div>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

