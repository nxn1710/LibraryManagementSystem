
@model LibraryManagement.Models.BookCategory
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Update Category ID @Model.ID
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.HiddenFor(a => a.ID)
                                @Html.LabelFor(a => a.CategoryName, "Category Name")
                                @Html.TextBoxFor(a => a.CategoryName, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.HiddenFor(a => a.ID)
                                @Html.LabelFor(a => a.Description, "Description")
                                @Html.TextAreaFor(a => a.Description, new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-info">Update</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

