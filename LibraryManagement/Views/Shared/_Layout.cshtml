

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Library Management - @ViewBag.title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/metisMenu.min.css")
    @Styles.Render("~/Content/css/timeline.css")
    @Styles.Render("~/Content/css/startmin.css")
    @Styles.Render("~/Content/css/font-awesome.min.css")
    @Styles.Render("~/Content/css/style.css")

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top"
             role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index">Library Management System</a>
            </div>

            <button type="button"
                    class="navbar-toggle"
                    data-toggle="collapse"
                    data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <ul class="nav navbar-nav navbar-left navbar-top-links">
                <li>
                    <a href="#"><i class="fa fa-home fa-fw"></i> Website</a>
                </li>
            </ul>

            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown">
                    <a class="dropdown-toggle"
                       data-toggle="dropdown"
                       href="#">
                        <i class="fa fa-user fa-fw"></i>@Request.Cookies["USERNAME"].Value
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">
                                <i class="fa fa-user fa-fw"></i>@Request.Cookies["FULLNAME"].Value
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Login/Logout">
                                <i class="fa fa-sign-out fa-fw"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav mb-3" id="side-menu">
                        <li>
                            <a href="index.html" class="active">
                                <i class="fa fa-dashboard fa-fw"></i>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-credit-card"></i> Borrows
                                Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Borrows/Add">Add new borrow</a>
                                </li>
                                <li>
                                    <a href="/Borrows/Index">View all borrows</a>
                                </li>
                                <li>
                                    <a href="/Borrows/Index?overdue=true">View all overdue borrows</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-book"></i> Book
                                Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Book/Index">View all books</a>
                                </li>
                                <li>
                                    <a href="/Book/Add">Add new book</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-cubes"></i>
                                Category Book Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Category/Index">View all categories</a>
                                </li>
                                <li>
                                    <a href="/Category/Add">Add new category</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-user-circle"></i>
                                Author Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Authors/Index">View all authors</a>
                                </li>
                                <li>
                                    <a href="/Authors/Add">Add new author</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-user"></i>
                                Member Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Member/Index">View all members</a>
                                </li>
                                <li>
                                    <a href="/Member/Add">Add new member</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-user"></i>
                                Staff Management<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Staff/Index">View all staffs</a>
                                </li>
                                <li>
                                    <a href="/Staff/Add">Add new staff</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header">@ViewBag.title</h3>
                    </div>
                </div>
                @RenderBody()

                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Scripts/js/jquery.min.js")
    @Scripts.Render("~/Scripts/js/bootstrap.min.js")
    @Scripts.Render("~/Scripts/js/metisMenu.min.js")
    @Scripts.Render("~/Scripts/js/startmin.js")
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>
